<% if @tasks.empty? %>
  <p>You don't have any tasks yet.</p>
  <p><%= link_to "Click here", new_project_path %> to create one.</p>
<% elsif @tasks.empty? %>
  <p>Sorry, there are no matches for <%= params[:query] %></p>
<% else %>
  <% @tasks.each do |task| %>
    <%= link_to task.title, project_task_path(@project, task) %>
  <% end %>
<% end %>